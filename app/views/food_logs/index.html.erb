<h1>Food Logs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Morning 6a-12p</th>
      <th>Afternoon 12p-4p</th>
      <th>Evening 4p-8p</th>
      <th>Night 8p-6a</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_logs.each do |food_log| %>
      <tr>
        <td>
          <%= food_log.date == Date.today ?
            'Today' :
            (food_log.date == Date.yesterday ? 'Yesterday' : food_log.date) %>
        </td>
        <td><%= food_log.morning %></td>
        <td><%= food_log.afternoon %></td>
        <td><%= food_log.evening %></td>
        <td><%= food_log.night %></td>
        <td><%= link_to 'Show', food_log %></td>
        <td><%= link_to 'Edit', edit_food_log_path(food_log) %></td>
        <td><%= link_to 'Destroy', food_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

